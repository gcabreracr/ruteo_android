<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/nomitem_lista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Item"
        app:layout_constraintBottom_toTopOf="@+id/cantidad_lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cantidad_lista"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_weight="2"
        android:text="####,###"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomitem_lista" />

    <TextView
        android:id="@+id/monto_lista"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="#####,###.00"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toEndOf="@+id/cantidad_lista"
        app:layout_constraintTop_toBottomOf="@+id/nomitem_lista" />

</android.support.constraint.ConstraintLayout>