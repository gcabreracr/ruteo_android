<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CambiaPDV">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:text="CAMBIA PUNTO DE VENTAS"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/cpdv_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cpdv_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Usuario: Nombre del Usuario"
        android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Agencias"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"/>

    <Spinner
        android:id="@+id/cpdv_spAgencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">

    </Spinner>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Punto de Venta"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"/>

    <Spinner
        android:id="@+id/cpdv_spPDV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">

    </Spinner>


    <Button
        android:id="@+id/cpdv_btnCambiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar"
        android:layout_marginTop="20dp"
        android:onClick="cpdv_btnCambiar"/>


</LinearLayout>